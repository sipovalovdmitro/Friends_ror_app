<% if user_signed_in? %>
<h1>Friend List</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <% if current_user == friend.user %>
        <tr>
          <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
        </tr>
      <% end %>
    <% end %>
  
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-primary" %>

<% else %>

<h1>Hello world!</h1>
<% end %>